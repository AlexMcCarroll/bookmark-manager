<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <% @links.each do |link| %>
      <%= link %>
      <br>
    <% end %>
    <br>
    <form action="/new_link" method="post">
      <label for="url">
        Enter URL
      </label>
      <input type="text" name="url">
      <input type="submit" value="Submit">
    </form>
    <div id="flash">
      <% flash.keys.each do |type| %>
        <div data-alert="data-alert" class="flash <%= type %> alert-box radius">
          <%= flash[type] %>
          <a href="/" class="close">&times;</a>
        </div>
      <% end %>
    </div>

  </body>
</html>